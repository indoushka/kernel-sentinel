{
  "tool": "Kernel Sentinel",
  "version": "1.0.0",

  "mode": "monitor-only",       
  "auto_update": false,         

  "language": "auto",          

  "kernel_policy": {
    "allowed_flavors": ["generic", "fips"],
    "block_custom_kernels": true,
    "auto_update_flavors": ["generic"] 
  },

  "notifications": {
    "email": {
      "enabled": false,
      "recipient": "admin@example.com",
      "smtp_server": "smtp.example.com",
      "smtp_port": 587,
      "username": "",
      "password": ""
    },
    "telegram": {
      "enabled": false,
      "bot_token": "",
      "chat_id": ""
    }
  },

  "reports": {
    "directory": "/var/log/kernel-sentinel/reports",
    "retain_days": 90,
    "format": "json",
    "gpg_sign": false
  },

  "security": {
    "require_root": true,
    "require_reboot_notice": true
  }
}
